# Environment variables for StockWise application
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=stockwise
POSTGRES_USER=stockwise_user
POSTGRES_PASSWORD=stockwise_password
DATABASE_URL=postgresql://stockwise_user:stockwise_password@localhost:5432/stockwise

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=true
ENVIRONMENT=development
BACKEND_PORT=8000
API_V1_STR=/api/v1

# External API Keys
GROQ_API_KEY=your-groq-api-key-here
    ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINANCIAL_MODELING_PREP_API_KEY=your-fmp-api-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/stockwise.log

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINANCIAL_MODELING_PREP_API_KEY=your-fmp-key

# Application Settings
DEBUG=True
ENVIRONMENT=development
API_V1_STR=/api/v1
